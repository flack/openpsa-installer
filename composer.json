{
    "name": "openpsa/installer",
    "type": "composer-installer",
    "description": "custom Composer installer for OpenPSA",
    "license": "LGPL",
    "authors": [
        {
            "name": "Andreas Flack",
            "email": "flack@contentcontrol-berlin.de",
            "homepage": "http://www.contentcontrol-berlin.de/"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "composer/composer": "*",
        "symfony/console": "~2.3.0"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-0": {"openpsa\\installer": "src/"}
    },
    "bin": ["bin/openpsa-installer"],
    "extra": {
        "class": "openpsa\\installer\\installer"
    }
}
